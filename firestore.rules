rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /Characters/{characters} {
      allow read: if true;
      allow write: if false;
    }
    match /Users/{userId} {
      allow read, write: if (request.auth.uid == userId);
    }
  }
}
